<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

  <%= form_tag profiles_path, :method=> 'get' do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "search", :name => nil %>
  </p>
  <% end %>



<table style="width:100%; border-collapse: separate; border-spacing: 0px 10px">
  <thead style="font-size: 20px; border: 1px solid black">
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th>Occupation</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><% unless user.profile.avatar_url.nil? %>
          <%= image_tag user.profile.avatar_url(:profile) %>
          <% else %>
          <img src="/assets/defaultprofile" height=100px width=100px>
          <% end %>
        </td>
        <td><%= user.first_name + " " + user.last_name %></td>
        <td><%= user.profile.occupation %></td>

        <td><%= link_to 'Show', user.profile %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
